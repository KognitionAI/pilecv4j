<assembly>
  <id>bin</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/dll-staging</directory>
      <outputDirectory>${platform}</outputDirectory>
      <includes> 
        <include>**/*.dll</include>
        <include>**/*.pdb</include>
        <include>**/*.so</include>
        <include>**/*.dylib</include>
        <include>**/*.MD5</include>
      </includes> 
    </fileSet>
  </fileSets>
</assembly>
